// src/components/common/RecruitPostModal.tsx

import React, { useState, useEffect } from 'react';
import { useAuthStore } from "@/stores/useAuthStore";
import {
  RecruitCategory,
  RecruitTargetType,
  ParticipantType,
  PostType,
  RecruitPostCreationRequestDto
} from "@/types/recruitPost";
import { REGIONS } from '@/constants/regions';
import Modal from '@/components/common/Modal';

interface PositionCount {
  FW: number;
  MF: number;
  DF: number;
  GK: number;
  ALL: number;
}

interface FormData {
  title: string;
  content: string;
  region: string;
  subRegion: string;
  gameDate: string;
  gameTime: string;
  requiredPersonnel: number | '';
  preferredPositions: string;
  teamName: string; // íŒ€â†’ê°œì¸ ëª¨ì§‘ ì‹œ ì†Œì†íŒ€ ì´ë¦„
  // í¬ì§€ì…˜ë³„ ëª¨ì§‘ ì¸ì›
  positionCounts: PositionCount;
  selectedPositions: Set<keyof PositionCount>;
}

interface Props {
  isOpen: boolean;
  onClose: () => void;
  onSubmit: (postData: RecruitPostCreationRequestDto) => Promise<void>;
  category: RecruitCategory;
  initialData?: PostType | null;
}

type RecruitmentFlow = 'TEAM_TO_INDIVIDUAL' | 'INDIVIDUAL_TO_TEAM';

const RecruitPostModal: React.FC<Props> = ({ isOpen, onClose, onSubmit, category, initialData }) => {
  const { user } = useAuthStore();

  const [formData, setFormData] = useState<FormData>({
    title: "",
    content: "",
    region: "",
    subRegion: "",
    gameDate: "",
    gameTime: "",
    requiredPersonnel: '',
    preferredPositions: "",
    teamName: "",
    positionCounts: { FW: 0, MF: 0, DF: 0, GK: 0, ALL: 0 },
    selectedPositions: new Set(),
  });

  const [recruitmentFlow, setRecruitmentFlow] = useState<RecruitmentFlow>('TEAM_TO_INDIVIDUAL');
  const [isLoading, setIsLoading] = useState(false);
  const [formError, setFormError] = useState<string | null>(null);

  // ì¹´í…Œê³ ë¦¬ë³„ ì„¤ì •
  const categoryConfig = {
    [RecruitCategory.MERCENARY]: {
      title: "ìš©ë³‘ ëª¨ì§‘",
      emoji: "ğŸ”¥",
    },
    [RecruitCategory.TEAM]: {
      title: "íŒ€ì› ëª¨ì§‘",
      emoji: "ğŸ›¡ï¸",
    },
    [RecruitCategory.MATCH]: {
      title: "ê²½ê¸° ëª¨ì§‘",
      emoji: "ğŸŸï¸",
    },
  };

  const config = categoryConfig[category];

  useEffect(() => {
    if (initialData && isOpen) {
      setFormData({
        title: initialData.title || "",
        content: initialData.content || "",
        region: initialData.region || "",
        subRegion: initialData.subRegion || "",
        gameDate: initialData.gameDate ? initialData.gameDate.substring(0, 10) : "",
        gameTime: initialData.gameTime || "",
        requiredPersonnel: initialData.requiredPersonnel ?? '',
        preferredPositions: initialData.preferredPositions || "",
        teamName: initialData.teamName || "",
      });
      if (category === RecruitCategory.MERCENARY) {
        setRecruitmentFlow(initialData.fromParticipant === 'INDIVIDUAL' ? 'INDIVIDUAL_TO_TEAM' : 'TEAM_TO_INDIVIDUAL');
      }
    } else if (isOpen) {
      setFormData({
        title: "", content: "", region: "", subRegion: "",
        gameDate: "", gameTime: "", requiredPersonnel: '',
        preferredPositions: "", teamName: "",
        positionCounts: { FW: 0, MF: 0, DF: 0, GK: 0, ALL: 0 },
        selectedPositions: new Set(),
      });
      setRecruitmentFlow('TEAM_TO_INDIVIDUAL');
      setFormError(null);
    }
  }, [initialData, isOpen, category]);

  const handleInputChange = (e: React.ChangeEvent<HTMLInputElement | HTMLTextAreaElement | HTMLSelectElement>) => {
    const { name, value } = e.target;
    setFormData(prev => ({ ...prev, [name]: value }));
  };

  // í¬ì§€ì…˜ ì²´í¬ë°•ìŠ¤ í† ê¸€
  const handlePositionToggle = (position: keyof PositionCount) => {
    setFormData(prev => {
      const newSelectedPositions = new Set(prev.selectedPositions);
      if (newSelectedPositions.has(position)) {
        newSelectedPositions.delete(position);
        // ì²´í¬ í•´ì œ ì‹œ í•´ë‹¹ í¬ì§€ì…˜ ì¸ì› 0ìœ¼ë¡œ ì´ˆê¸°í™”
        return {
          ...prev,
          selectedPositions: newSelectedPositions,
          positionCounts: { ...prev.positionCounts, [position]: 0 }
        };
      } else {
        newSelectedPositions.add(position);
        return {
          ...prev,
          selectedPositions: newSelectedPositions
        };
      }
    });
  };

  // í¬ì§€ì…˜ë³„ ì¸ì› ìˆ˜ ë³€ê²½
  const handlePositionCountChange = (position: keyof PositionCount, value: string) => {
    const count = value === '' ? 0 : parseInt(value, 10);
    setFormData(prev => ({
      ...prev,
      positionCounts: { ...prev.positionCounts, [position]: count }
    }));
  };

  // ì´ ëª¨ì§‘ ì¸ì› ê³„ì‚°
  const getTotalRequiredPersonnel = () => {
    const { FW, MF, DF, GK, ALL } = formData.positionCounts;
    return FW + MF + DF + GK + ALL;
  };

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    setFormError(null);

    if (!user) {
      setFormError("ê¸€ì„ ì‘ì„±í•˜ë ¤ë©´ ë¡œê·¸ì¸ì´ í•„ìš”í•©ë‹ˆë‹¤.");
      return;
    }

    if (!formData.title.trim() || !formData.content.trim() || !formData.region) {
      setFormError("ì œëª©, ë‚´ìš©, ì§€ì—­ì€ í•„ìˆ˜ ì…ë ¥ í•­ëª©ì…ë‹ˆë‹¤.");
      return;
    }

    if (!formData.gameDate || !formData.gameTime) {
      setFormError("ê²½ê¸° ë‚ ì§œì™€ ì‹œê°„ì€ í•„ìˆ˜ ì…ë ¥ í•­ëª©ì…ë‹ˆë‹¤.");
      return;
    }

    // ë‚ ì§œ/ì‹œê°„ ìœ íš¨ì„± ê²€ì‚¬
    const now = new Date();
    const selectedDateTime = new Date(`${formData.gameDate}T${formData.gameTime}`);

    if (selectedDateTime < now) {
      setFormError("ê³¼ê±° ë‚ ì§œì™€ ì‹œê°„ì€ ì„ íƒí•  ìˆ˜ ì—†ìŠµë‹ˆë‹¤. í˜„ì¬ ì‹œê°„ ì´í›„ë¡œ ì„ íƒí•´ì£¼ì„¸ìš”.");
      return;
    }

    // í¬ì§€ì…˜ ì„ íƒ ê²€ì¦ (ì ì–´ë„ í•˜ë‚˜ëŠ” ì„ íƒí•´ì•¼ í•¨)
    const totalPersonnel = getTotalRequiredPersonnel();
    if (totalPersonnel === 0) {
      setFormError("ìµœì†Œ 1ê°œ ì´ìƒì˜ í¬ì§€ì…˜ê³¼ ì¸ì›ì„ ì„ íƒí•´ì£¼ì„¸ìš”.");
      return;
    }

    setIsLoading(true);

    const isTeamToIndividual = recruitmentFlow === 'TEAM_TO_INDIVIDUAL';

    // í¬ì§€ì…˜ ì •ë³´ë¥¼ ë¬¸ìì—´ë¡œ ë³€í™˜ (ì˜ˆ: "FW:2, MF:1, DF:2")
    const buildPositionString = () => {
      const positions: string[] = [];
      (['FW', 'MF', 'DF', 'GK', 'ALL'] as const).forEach(pos => {
        if (formData.selectedPositions.has(pos) && formData.positionCounts[pos] > 0) {
          positions.push(`${pos}:${formData.positionCounts[pos]}`);
        }
      });
      return positions.join(', ');
    };

    const dto: RecruitPostCreationRequestDto = {
      teamId: user.teamId || 1, // TODO: ì‹¤ì œ ì‚¬ìš©ìì˜ íŒ€ ID
      writerProfileId: user.profileId || 1, // í˜„ì¬ ì‚¬ìš©ìì˜ í”„ë¡œí•„ ID
      title: formData.title.trim(),
      content: formData.content.trim(),
      category: category,
      region: formData.region,
      subRegion: formData.subRegion.trim() || undefined,
      matchDate: formData.gameDate, // matchDateë¡œ ì „ì†¡
      gameTime: formData.gameTime,
      requiredPersonnel: getTotalRequiredPersonnel() || undefined,
      preferredPositions: buildPositionString() || undefined,
      targetType: category === RecruitCategory.MERCENARY
        ? (isTeamToIndividual ? RecruitTargetType.USER : RecruitTargetType.TEAM)
        : RecruitTargetType.USER,
      status: "RECRUITING",
    };

    try {
      await onSubmit(dto);
    } catch (error) {
      console.error("ê²Œì‹œê¸€ ì €ì¥ ì‹¤íŒ¨:", error);
      setFormError(error instanceof Error ? error.message : "ê²Œì‹œê¸€ ì €ì¥ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.");
    } finally {
      setIsLoading(false);
    }
  };

  return (
    <Modal isOpen={isOpen} onClose={onClose} title={`${config.emoji} ${config.title}`}>
      <form onSubmit={handleSubmit} className="space-y-5">

        {/* ì„¹ì…˜ 1: ê¸°ë³¸ ì •ë³´ */}
        <div className="bg-gray-50 rounded-lg p-4">
          <h3 className="text-sm font-semibold text-gray-600 mb-3 flex items-center gap-2">
            <span>ğŸ“‹</span> ê¸°ë³¸ ì •ë³´
          </h3>
          <div className="space-y-3">
            {/* ìš©ë³‘ ì „ìš©: ëª¨ì§‘ ìœ í˜• */}
            {category === RecruitCategory.MERCENARY && (
              <div>
                <label className="block text-xs font-medium text-gray-500 mb-2">
                  ëª¨ì§‘ ìœ í˜• <span className="text-red-500">*</span>
                </label>
                <div className="grid grid-cols-2 gap-3">
                  <button
                    type="button"
                    onClick={() => setRecruitmentFlow('TEAM_TO_INDIVIDUAL')}
                    className={`px-4 py-3 rounded-lg border-2 transition-all ${
                      recruitmentFlow === 'TEAM_TO_INDIVIDUAL'
                        ? 'border-blue-500 bg-blue-50 text-blue-700 font-semibold'
                        : 'border-gray-300 bg-white text-gray-700 hover:border-gray-400'
                    }`}
                  >
                    <div className="flex flex-col items-center gap-1">
                      <span className="text-lg">ğŸ›¡ï¸</span>
                      <span className="text-sm">íŒ€ â†’ ìš©ë³‘</span>
                      <span className="text-xs text-gray-500">íŒ€ì—ì„œ ìš©ë³‘ ëª¨ì§‘</span>
                    </div>
                  </button>
                  <button
                    type="button"
                    onClick={() => setRecruitmentFlow('INDIVIDUAL_TO_TEAM')}
                    className={`px-4 py-3 rounded-lg border-2 transition-all ${
                      recruitmentFlow === 'INDIVIDUAL_TO_TEAM'
                        ? 'border-green-500 bg-green-50 text-green-700 font-semibold'
                        : 'border-gray-300 bg-white text-gray-700 hover:border-gray-400'
                    }`}
                  >
                    <div className="flex flex-col items-center gap-1">
                      <span className="text-lg">âš”ï¸</span>
                      <span className="text-sm">ê°œì¸ â†’ íŒ€</span>
                      <span className="text-xs text-gray-500">ê°œì¸ì´ íŒ€ ì°¾ê¸°</span>
                    </div>
                  </button>
                </div>
              </div>
            )}

            {/* íŒ€â†’ìš©ë³‘ ì„ íƒ ì‹œ ì†Œì†íŒ€ ì…ë ¥ */}
            {category === RecruitCategory.MERCENARY && recruitmentFlow === 'TEAM_TO_INDIVIDUAL' && (
              <div>
                <label className="block text-xs font-medium text-gray-500 mb-1">
                  ì†Œì† íŒ€ <span className="text-red-500">*</span>
                </label>
                <input
                  name="teamName"
                  type="text"
                  required
                  value={formData.teamName}
                  onChange={handleInputChange}
                  placeholder="ì˜ˆ: FC ì„œìš¸, ê°•ë‚¨ ìœ ë‚˜ì´í‹°ë“œ"
                  className="w-full px-3 py-2 bg-white border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                />
              </div>
            )}

            {/* ì œëª© */}
            <div>
              <label className="block text-xs font-medium text-gray-500 mb-1">
                ì œëª© <span className="text-red-500">*</span>
              </label>
              <input
                name="title"
                type="text"
                required
                value={formData.title}
                onChange={handleInputChange}
                placeholder="ëª¨ì§‘ê¸€ ì œëª©ì„ ì…ë ¥í•˜ì„¸ìš”"
                className="w-full px-3 py-2 bg-white border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>

            {/* ì§€ì—­ / ì„¸ë¶€ì§€ì—­ */}
            <div className="grid grid-cols-2 gap-3">
              <div>
                <label className="block text-xs font-medium text-gray-500 mb-1">
                  ì§€ì—­ <span className="text-red-500">*</span>
                </label>
                <select
                  name="region"
                  required
                  value={formData.region}
                  onChange={handleInputChange}
                  className="w-full px-3 py-2 bg-white border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                >
                  <option value="">ì§€ì—­ ì„ íƒ</option>
                  {REGIONS.map(r => <option key={r} value={r}>{r}</option>)}
                </select>
              </div>
              <div>
                <label className="block text-xs font-medium text-gray-500 mb-1">
                  ì„¸ë¶€ ì§€ì—­
                </label>
                <input
                  name="subRegion"
                  type="text"
                  value={formData.subRegion}
                  onChange={handleInputChange}
                  placeholder="ì˜ˆ: ê°•ë‚¨êµ¬"
                  className="w-full px-3 py-2 bg-white border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                />
              </div>
            </div>
          </div>
        </div>

        {/* ì„¹ì…˜ 2: ì¼ì • */}
        <div className="bg-blue-50 rounded-lg p-4">
          <h3 className="text-sm font-semibold text-blue-600 mb-3 flex items-center gap-2">
            <span>ğŸ“…</span> ì¼ì •
          </h3>
          <div className="grid grid-cols-2 gap-3">
            <div>
              <label className="block text-xs font-medium text-gray-500 mb-1">
                ë‚ ì§œ <span className="text-red-500">*</span>
              </label>
              <input
                name="gameDate"
                type="date"
                required
                value={formData.gameDate}
                onChange={handleInputChange}
                className="w-full px-3 py-2 bg-white border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <div>
              <label className="block text-xs font-medium text-gray-500 mb-1">
                ì‹œê°„ <span className="text-red-500">*</span>
              </label>
              <input
                name="gameTime"
                type="time"
                required
                value={formData.gameTime}
                onChange={handleInputChange}
                className="w-full px-3 py-2 bg-white border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
          </div>
        </div>

        {/* ì„¹ì…˜ 3: ëª¨ì§‘ ì¡°ê±´ */}
        <div className="bg-green-50 rounded-lg p-4">
          <h3 className="text-sm font-semibold text-green-600 mb-3 flex items-center gap-2">
            <span>ğŸ‘¥</span> ëª¨ì§‘ ì¡°ê±´
          </h3>

          {/* ëª¨ì§‘ ì¸ì› (ì½ê¸° ì „ìš©, ìë™ ê³„ì‚°) */}
          <div className="mb-4">
            <label className="block text-xs font-medium text-gray-500 mb-1">
              ëª¨ì§‘ ì¸ì› <span className="text-red-500">*</span>
            </label>
            <input
              type="number"
              value={getTotalRequiredPersonnel()}
              readOnly
              className="w-full px-3 py-2 bg-gray-100 border border-gray-300 rounded-md text-sm text-gray-600 cursor-not-allowed"
            />
          </div>

          {/* ëª¨ì§‘ í¬ì§€ì…˜ */}
          <div>
            <label className="block text-xs font-medium text-gray-500 mb-2">
              ëª¨ì§‘ í¬ì§€ì…˜
            </label>
            <div className="space-y-2">
              {(['FW', 'MF', 'DF', 'GK', 'ALL'] as const).map((position) => {
                const isChecked = formData.selectedPositions.has(position);
                const positionLabels = {
                  FW: 'ê³µê²©ìˆ˜ (FW)',
                  MF: 'ë¯¸ë“œí•„ë” (MF)',
                  DF: 'ìˆ˜ë¹„ìˆ˜ (DF)',
                  GK: 'ê³¨í‚¤í¼ (GK)',
                  ALL: 'ì „ì²´ (ë¬´ê´€)'
                };

                return (
                  <div key={position} className="flex items-center gap-3 bg-white p-2 rounded-md border border-gray-200">
                    <input
                      type="checkbox"
                      id={`position-${position}`}
                      checked={isChecked}
                      onChange={() => handlePositionToggle(position)}
                      className="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                    />
                    <label
                      htmlFor={`position-${position}`}
                      className="flex-1 text-sm font-medium text-gray-700 cursor-pointer"
                    >
                      {positionLabels[position]}
                    </label>
                    <input
                      type="number"
                      min="0"
                      value={formData.positionCounts[position] || ''}
                      onChange={(e) => handlePositionCountChange(position, e.target.value)}
                      disabled={!isChecked}
                      placeholder="0"
                      className={`w-16 px-2 py-1 text-sm text-center border rounded-md ${
                        isChecked
                          ? 'bg-white border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500'
                          : 'bg-gray-100 border-gray-200 text-gray-400 cursor-not-allowed'
                      }`}
                    />
                  </div>
                );
              })}
            </div>
          </div>
        </div>

        {/* ì„¹ì…˜ 4: ìƒì„¸ ë‚´ìš© */}
        <div className="bg-yellow-50 rounded-lg p-4">
          <h3 className="text-sm font-semibold text-yellow-600 mb-3 flex items-center gap-2">
            <span>ğŸ“</span> ìƒì„¸ ë‚´ìš©
          </h3>
          <textarea
            name="content"
            required
            value={formData.content}
            onChange={handleInputChange}
            placeholder="ëª¨ì§‘ ë‚´ìš©ì„ ìì„¸íˆ ì‘ì„±í•´ì£¼ì„¸ìš” (ì—°ë ¹ëŒ€, ì‹¤ë ¥ ìˆ˜ì¤€, ê¸°íƒ€ ìš”êµ¬ì‚¬í•­ ë“±)"
            rows={4}
            className="w-full px-3 py-2 bg-white border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        {/* ì—ëŸ¬ ë©”ì‹œì§€ */}
        {formError && (
          <div className="p-3 bg-red-50 border border-red-300 text-red-600 text-sm rounded-md">
            {formError}
          </div>
        )}

        {/* ë²„íŠ¼ */}
        <div className="flex justify-end gap-3 pt-2">
          <button
            type="button"
            onClick={onClose}
            disabled={isLoading}
            className="px-5 py-2.5 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 transition-colors font-medium"
          >
            ì·¨ì†Œ
          </button>
          <button
            type="submit"
            disabled={isLoading}
            className="px-5 py-2.5 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors font-medium disabled:opacity-50"
          >
            {isLoading ? "ë“±ë¡ ì¤‘..." : (initialData ? "ìˆ˜ì •í•˜ê¸°" : "ë“±ë¡í•˜ê¸°")}
          </button>
        </div>
      </form>
    </Modal>
  );
};

export default RecruitPostModal;
